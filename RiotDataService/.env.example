# RiotDataService environment example
PORT=3003

# OIDC / Keycloak for admin endpoints
OIDC_ISSUER_URL=http://localhost:8080/realms/fitlol
OIDC_JWKS_URI=http://localhost:8080/realms/fitlol/protocol/openid-connect/certs
# Optional audience validation
# OIDC_AUDIENCE=fitlol-backend
# Role claim path
OIDC_ROLE_PATH=realm_access.roles

# CORS
CORS_ORIGIN=http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fitlol?schema=public

# Rate limiting for admin API
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Redis / Queue
REDIS_URL=redis://localhost:6379
QUEUE_PREFIX=fitlol
BULLMQ_CONCURRENCY=5

# Riot API
RIOT_API_KEY=your_riot_api_key_here
RIOT_HTTP_TIMEOUT_MS=10000
RIOT_MAX_RETRIES=3

# Ingestion defaults
INGESTION_MAX_MATCHES_PER_RUN=10

# Scheduler (future use)
SCHEDULE_ENABLE=false
CRON_LATEST_EVERY=0 */1 * * *
CRON_RANK_DAILY=0 3 * * *
CRON_WEEKLY_REPORT=0 4 * * 1
